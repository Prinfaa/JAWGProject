<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#55000000"
    android:orientation="vertical"
    >

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="36sp"
                android:background="#1D7FC0"
                android:gravity="center"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/btnBack"
                    android:layout_width="fill_parent"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_weight="5"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_action_backwhite" />

                <LinearLayout
                    android:layout_width="1px"
                    android:layout_height="fill_parent"
                    android:background="#FFFFFF"
                    android:layout_marginTop="5sp"
                    android:layout_marginBottom="5sp">

                </LinearLayout>

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="消  防  检  查"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="5sp"
                android:layout_marginBottom="5sp"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="180sp"
                    android:layout_weight="2"
                    android:background="#1D7FC0"
                    android:orientation="horizontal">


                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_margin="1sp"

                        android:background="#FFFFFF"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/ivWarning"
                            android:layout_width="fill_parent"
                            android:layout_height="40sp"
                            android:layout_margin="2sp"
                            android:layout_weight="2.3"
                            android:src="@drawable/ic_action_warning"
                            android:scaleType="fitCenter"
                            android:layout_gravity="center"
                            android:visibility="gone"/>
                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:orientation="horizontal"
                            android:layout_weight="1">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="fill_parent"
                                android:layout_marginRight="1sp"
                                android:layout_weight="1.7"
                                android:background="#FFFFFF"
                                android:gravity="center|right"
                                android:text="目前有"
                                android:textSize="13sp"
                                />
                            <TextView
                                android:id="@+id/tvRecord"
                                android:layout_width="wrap_content"
                                android:layout_height="fill_parent"
                                android:layout_marginLeft="1sp"
                                android:layout_marginRight="1sp"
                                android:layout_weight="1.8"
                                android:background="#FFFFFF"
                                android:gravity="center"
                                android:text="112"
                                android:textSize="24sp"
                                android:textStyle="bold|italic"
                                android:textColor="#1D7FC0"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="fill_parent"
                                android:layout_marginLeft="1sp"
                                android:layout_marginRight="1sp"
                                android:layout_weight="1"
                                android:background="#FFFFFF"
                                android:gravity="center|left"
                                android:text="条记录等待上传"
                                android:textSize="13sp" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tvSend"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_gravity="center"
                            android:layout_weight="2"
                            android:background="#FFFFFF"
                            android:gravity="center"
                            android:text="上传记录"
                            android:textColor="#1D7FC0" />

                    </LinearLayout>


                </LinearLayout>
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="5sp"
                    ></LinearLayout>
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"

                    android:layout_weight="1"
                    android:background="#1D7FC0"
                    android:orientation="horizontal"

                    >


                    <ListView
                        android:id="@+id/lvRcord"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_margin="1sp"
                        android:background="#ffffff">

                    </ListView>
                </LinearLayout>


            </LinearLayout>


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginBottom="10sp"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                android:layout_weight="2"
                android:background="#1D7FC0">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_margin="1sp"
                    android:background="#FFFFFF"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_gravity="right|center"
                        android:layout_margin="20sp"
                        android:layout_weight="0.8"
                        android:scaleType="fitCenter"
                        android:src="@drawable/nfc_scan" />

                    <TextView
                        android:id="@+id/tvBeginCheck"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:background="#FFFFFF"
                        android:gravity="left|center"
                        android:text="开 始 检 查"
                        android:textColor="#1D7FC0"
                        android:textSize="24sp" />

                </LinearLayout>


            </LinearLayout>




            </LinearLayout>
        <LinearLayout
            android:id="@+id/llSendStatus"
            android:layout_width="fill_parent"
            android:layout_height="100sp"
            android:layout_gravity="center"
            android:layout_margin="50sp"
            android:background="#88000000"
            android:padding="1px"
            android:visibility="invisible"
            >
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="#FFFFFF"
                android:orientation="vertical">
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:text="记录上传中......"
                    android:gravity="center"
                    />
                <TextView
                    android:id="@+id/tvSendStatus"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:text="已上传   1/12"
                    android:gravity="center"
                    />

                </LinearLayout>




            </LinearLayout>






        </FrameLayout>



</LinearLayout>