<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="36sp"
        android:background="#ee3000"
        android:gravity="center"
        android:orientation="horizontal">


        <!--<ImageView-->
            <!--android:id="@+id/btnBack"-->
            <!--android:layout_width="fill_parent"-->
            <!--android:layout_height="24sp"-->
            <!--android:layout_gravity="center"-->
            <!--android:layout_weight="1.8"-->
            <!--android:scaleType="fitCenter"-->
            <!--android:src="@drawable/ic_action_backwhite" />-->

        <LinearLayout
            android:layout_width="1px"
            android:layout_height="fill_parent"
            android:layout_marginBottom="5sp"
            android:layout_marginTop="5sp"
            android:background="#88FFFFFF">

        </LinearLayout>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="40sp"
            android:layout_gravity="center"
            android:layout_marginLeft="4sp"
            android:layout_marginRight="4sp"
            android:layout_weight="1.2"
            android:gravity="center"
            android:singleLine="true"
            android:text="防  火  检  查"
            android:textColor="#ffffff"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvUnitName"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginRight="15sp"
            android:layout_weight="1"
            android:gravity="right|center"
            android:singleLine="true"
            android:text="枣庄市台儿庄公馆"
            android:textColor="#ffffff"
            android:textSize="14sp" />


    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000">

        <LinearLayout
            android:id="@+id/ll_main"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal">

            <ListView
                android:id="@+id/lvCheckedCard"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@drawable/bg113" />

            <ListView
                android:id="@+id/lvCheckRecord"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="#FFFFFF" />

        </LinearLayout>

        <ScrollView
            android:id="@+id/sv_info"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="20sp"
            android:padding="10sp"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/llCheckInfo"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_margin="0px"
                    android:background="#ffffff"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="10sp"
>

                        <!--<ImageView-->
                            <!--android:id="@+id/ivCheck"-->
                            <!--android:layout_width="fill_parent"-->
                            <!--android:layout_height="fill_parent"-->
                            <!--android:layout_margin="10sp"-->
                            <!--android:scaleType="fitCenter"-->
                            <!--android:src="@drawable/nfc_scan" />-->
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10sp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="2"
                            android:gravity="center"
                            android:text="卡片编号:" />

                        <TextView
                            android:id="@+id/tvCardNo"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="1"
                            android:gravity="center|left"
                            android:textColor="#000000"
                            android:textSize="18sp"
                            android:textStyle="bold|italic" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5sp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="2"
                            android:gravity="center"
                            android:text="设施类型:" />

                        <TextView
                            android:id="@+id/tvFac"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="1"
                            android:gravity="center|left"
                            android:text=""
                            android:textColor="#000000" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5sp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="2"
                            android:gravity="center"
                            android:text="安装部位:" />

                        <TextView
                            android:id="@+id/tvPosition"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="1"
                            android:gravity="center|left"
                            android:text=""
                            android:textColor="#000000" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5sp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="2"
                            android:gravity="center"
                            android:text="检查记录:" />

                        <TextView
                            android:id="@+id/tvStatue"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="1"
                            android:gravity="center|left"
                            android:text=""
                            android:textColor="#000000" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5sp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="2"
                            android:gravity="center"
                            android:text="备    注:" />

                        <TextView
                            android:id="@+id/tvNote"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="1"
                            android:gravity="center|left"
                            android:text=""
                            android:textColor="#000000" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20sp"
                        android:layout_marginTop="5sp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="2"
                            android:gravity="center"
                            android:text="检查时间:" />

                        <TextView
                            android:id="@+id/tvTime"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="1"
                            android:gravity="center|left"
                            android:text=""
                            android:textColor="#000000" />

                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>
        </ScrollView>

    </FrameLayout>

</LinearLayout>