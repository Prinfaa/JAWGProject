<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/ui_5_dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_marginTop="@dimen/ui_5_dp"
        android:background="@drawable/shape_project_statistics_list">

        <TextView
            android:id="@+id/tv_company_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/ui_8_dp"
            android:layout_marginTop="@dimen/ui_3_dp"
            android:text="山东经安纬固消防科技有限公司"
            android:textColor="#000"
            android:textSize="@dimen/ui_15_sp" />

        <TextView
            android:id="@+id/tv_device_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/ui_20_dp"
            android:layout_marginTop="5dp"
            android:text="设备总计："
            android:textColor="#000"
            android:textSize="13sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_below="@+id/tv_company_name"
            android:layout_marginLeft="@dimen/ui_8_dp"
            android:layout_marginTop="@dimen/ui_3_dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_device_alarm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/ui_20_dp"
                android:text="设备总计："
                android:textColor="#000"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/tv_device_flame"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/ui_20_dp"
                android:layout_marginTop="3dp"
                android:text="设备总计："
                android:textColor="#000"
                android:textSize="11sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_below="@+id/tv_company_name"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/ui_8_dp"
            android:layout_marginTop="@dimen/ui_3_dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_device_water"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/ui_20_dp"
                android:text="设备总计："
                android:textColor="#000"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/tv_device_car_alarm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/ui_20_dp"
                android:layout_marginTop="3dp"
                android:text="设备总计："
                android:textColor="#000"
                android:textSize="11sp" />
        </LinearLayout>


        <TextView
            android:id="@+id/tv_electric_chack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/tv_device_all"
            android:layout_marginRight="70dp"
            android:layout_marginTop="@dimen/dp_5"
            android:text="设备总计："
            android:textColor="#000"
            android:textSize="11sp"

            />

        <TextView
            android:id="@+id/tv_name_and_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="10dp"
            android:visibility="gone"
            android:layout_marginTop="@dimen/dp_5"
            android:text="崔通  2018/03/12"
            android:textColor="#000"
            android:textSize="10sp"

            />


    </RelativeLayout>


</LinearLayout>