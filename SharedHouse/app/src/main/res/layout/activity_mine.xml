<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f3f3f5"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    tools:context="com.jinganweigu.entrysystem.activities.MineActivity">

    <include 
        android:id="@+id/include"
        layout="@layout/include_top"/>
    


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/ui_40_dp"
        android:orientation="horizontal"
        android:background="@color/white"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="姓名"
            android:layout_marginLeft="@dimen/ui_20_dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:textColor="#000"
            />
        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="姓名"
            android:background="@color/white"
            android:gravity="center_vertical|right"
            android:paddingRight="@dimen/ui_20_dp"
            android:paddingLeft="@dimen/ui_20_dp"
            />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/ui_40_dp"
        android:orientation="horizontal"
        android:layout_marginTop="2dp"
        android:background="@color/white"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="仓库"
            android:layout_marginLeft="@dimen/ui_20_dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:textColor="#000"
            />
        <TextView
            android:id="@+id/tv_ware_house"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="姓名"
            android:background="@color/white"
            android:gravity="center_vertical|right"
            android:paddingRight="@dimen/ui_20_dp"
            android:paddingLeft="@dimen/ui_20_dp"
            />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/ui_40_dp"
        android:orientation="horizontal"
        android:layout_marginTop="2dp"
        android:background="@color/white"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="公司"
            android:layout_marginLeft="@dimen/ui_20_dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:textColor="#000"
            />
        <TextView
            android:id="@+id/tv_company_name"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="姓名"
            android:background="@color/white"
            android:gravity="center_vertical|right"
            android:paddingRight="@dimen/ui_20_dp"
            android:paddingLeft="@dimen/ui_20_dp"
            />
    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <Button
            android:id="@+id/btn_login_out"
            android:layout_width="match_parent"
            android:layout_height="@dimen/ui_40_dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/ui_30_dp"
            android:layout_marginRight="@dimen/ui_30_dp"
            android:layout_marginLeft="@dimen/ui_30_dp"
            android:background="@drawable/shape_manual_entry_surenter"
            android:text="退出"
            android:textColor="@color/red_text"
            android:textSize="@dimen/ui_18_sp"
            />



    </RelativeLayout>




</LinearLayout>
