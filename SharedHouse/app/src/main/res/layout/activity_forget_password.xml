<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    android:orientation="vertical"
    tools:context="com.jinganweigu.entrysystem.activities.ForgetPasswordActivity">




    <LinearLayout
        android:id="@+id/ll_back"
        android:layout_width="@dimen/ui_40_dp"
        android:layout_height="@dimen/ui_40_dp"
        android:gravity="center"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/login_back"
            />
    </LinearLayout>

    <com.jinganweigu.entrysystem.view.PingFangTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="27dp"
        android:layout_marginTop="@dimen/ui_15_dp"
        android:textColor="@color/white"
        android:text="忘记密码"
        android:textSize="30sp"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="27dp"
        android:layout_marginTop="30dp"
        android:text="您的手机号"
        android:textColor="@color/white"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/ui_20_dp"
        android:layout_marginLeft="27dp"
        android:layout_marginRight="27dp"
        >

        <EditText
            android:id="@+id/ed_phone_num"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/ui_40_dp"
            android:background="@null"
            android:paddingLeft="@dimen/ui_10_dp"
            android:gravity="center_vertical"
            android:textColor="@color/white"
            android:text="18766142274"
            />

        <Button
            android:layout_width="150dp"
            android:layout_height="35dp"
            android:background="@drawable/shape_register_code_button"
            android:textColor="@color/colorAccent"
            android:text="获取验证码"
            android:textSize="12sp"
            android:layout_weight="1"/>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/white"
        android:layout_marginRight="27dp"
        android:layout_marginLeft="27dp"/>




    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="27dp"
        android:layout_marginTop="30dp"
        android:text="手机验证码"
        android:textColor="@color/white"
        />


    <EditText
        android:id="@+id/ed_phone_code"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ui_40_dp"
        android:layout_marginLeft="27dp"
        android:layout_marginRight="27dp"
        android:background="@null"
        android:paddingLeft="@dimen/ui_10_dp"
        android:gravity="center_vertical"
        android:textColor="@color/white"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/white"
        android:layout_marginRight="27dp"
        android:layout_marginLeft="27dp"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="27dp"
        android:layout_marginTop="30dp"
        android:text="设置密码（最少8位，数字+字母）"
        android:textColor="@color/white"
        />


    <EditText
        android:id="@+id/ed_phone_pwd"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ui_40_dp"
        android:layout_marginLeft="27dp"
        android:layout_marginRight="27dp"
        android:background="@null"
        android:paddingLeft="@dimen/ui_10_dp"
        android:gravity="center_vertical"
        android:textColor="@color/white"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/white"
        android:layout_marginRight="27dp"
        android:layout_marginLeft="27dp"/>


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="27dp"
        android:layout_marginTop="30dp"
        android:text="再次输入您的新密码"
        android:textColor="@color/white" />


    <EditText
        android:id="@+id/ed_phone_pwd_second"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ui_40_dp"
        android:layout_marginLeft="27dp"
        android:layout_marginRight="27dp"
        android:background="@null"
        android:paddingLeft="@dimen/ui_10_dp"
        android:gravity="center_vertical"
        android:textColor="@color/white"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/white"
        android:layout_marginRight="27dp"
        android:layout_marginLeft="27dp"/>


    <Button
        android:id="@+id/btn_sure"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginLeft="27dp"
        android:layout_marginRight="27dp"
        android:layout_marginTop="@dimen/ui_30_dp"
        android:text="确认"
        android:textColor="@color/colorAccent"
        android:textSize="18sp"
        android:background="@drawable/shape_login_button"
        />


</LinearLayout>
