<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    tools:context="com.jinganweigu.entrysystem.activities.ReturnProjectDeticalActivity">

    <include layout="@layout/include_top"/>

    <TextView
        android:id="@+id/tv_project_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="项目名称"
        android:layout_marginTop="@dimen/ui_15_dp"
        android:layout_marginLeft="@dimen/ui_20_dp"
        android:textColor="@color/colorPrimary"
        />

    <TextView
        android:id="@+id/tv_return_all"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="退货总计：00"
        android:gravity="right"
        android:layout_marginRight="@dimen/ui_20_dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/ui_5_dp"
        android:layout_marginLeft="@dimen/ui_20_dp"
        android:text="正常退货"
        android:textSize="@dimen/ui_15_sp"
        />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/ui_3_dp"
        android:background="@drawable/shape_return_project_detail"
        android:layout_marginLeft="@dimen/ui_20_dp"
        android:layout_marginRight="@dimen/ui_20_dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="设备ID"
                android:textSize="@dimen/ui_15_sp"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="设备类型"
                android:textSize="@dimen/ui_15_sp"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="时间"
                android:textSize="@dimen/ui_15_sp"
                />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/home_line"/>

        <ListView
            android:id="@+id/lv_good_device"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:scrollbars="none"
            android:divider="@color/home_line"
            android:dividerHeight="1dp"
            ></ListView>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/home_line"/>

        
        <TextView
            android:id="@+id/tv_good_return_all"
            android:layout_width="match_parent"
            android:layout_height="@dimen/ui_20_dp"
            android:gravity="center_vertical|right"
            android:text="总计：00"
            android:layout_marginRight="@dimen/ui_30_dp"
            />




    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/ui_5_dp"
        android:layout_marginLeft="@dimen/ui_15_dp"
        android:text="损坏退货"
        android:textSize="@dimen/ui_15_sp"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="@drawable/shape_return_project_detail"
        android:layout_marginTop="@dimen/ui_5_dp"
        android:layout_marginLeft="@dimen/ui_20_dp"
        android:layout_marginRight="@dimen/ui_20_dp"
        android:layout_marginBottom="@dimen/ui_10_dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="设备ID"
                android:textSize="@dimen/ui_15_sp"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="设备类型"
                android:textSize="@dimen/ui_15_sp"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="时间"
                android:textSize="@dimen/ui_15_sp"
                />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/home_line"/>

        <ListView
            android:id="@+id/lv_bad_device"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:scrollbars="none"
            android:divider="@color/home_line"
            android:dividerHeight="1dp"
            ></ListView>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/home_line"/>


        <TextView
            android:id="@+id/tv_bad_return_all"
            android:layout_width="match_parent"
            android:layout_height="@dimen/ui_20_dp"
            android:gravity="center_vertical|right"
            android:text="总计：00"
            android:layout_marginRight="@dimen/ui_30_dp"
            />

















    </LinearLayout>

    


</LinearLayout>
