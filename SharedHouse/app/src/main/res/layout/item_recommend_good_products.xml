<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="101dp"
        android:layout_height="225dp"
        android:layout_marginTop="@dimen/ui_20_dp"
        android:layout_marginLeft="@dimen/ui_5_dp"
        android:layout_marginRight="@dimen/ui_5_dp"
        android:orientation="vertical"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="152dp"
            />
        <com.jinganweigu.entrysystem.view.PingFangTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="11dp"
            android:text="万达"
            android:textSize="14sp"
            android:textColor="#4c4c4c"
            />
        <com.jinganweigu.entrysystem.view.PingFangTextView
            android:id="@+id/tv_house_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="#666666"
            android:textSize="12sp"
            android:text="¥185.00/天"
            />


    </LinearLayout>


</LinearLayout>