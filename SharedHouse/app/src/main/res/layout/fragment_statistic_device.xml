<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       android:gravity="center_horizontal"
        android:textColor="@color/details_text_color"
        android:textSize="20sp"
        android:layout_marginTop="@dimen/ui_15_dp"
        android:text="设备统计"
        />


    <com.github.mikephil.charting.charts.PieChart
        android:id="@+id/piechart"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        ></com.github.mikephil.charting.charts.PieChart>


    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/home_line"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:background="@color/white"
        android:layout_marginTop="@dimen/ui_15_dp"
        android:layout_marginRight="@dimen/ui_10_dp"
        android:layout_marginLeft="@dimen/ui_10_dp"
        android:layout_marginBottom="@dimen/ui_10_dp"

        >

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <ListView
                android:id="@+id/lv_device"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/ui_30_dp"
                android:background="@drawable/shape_register_code_button"
                ></ListView>

            <LinearLayout
                android:id="@+id/invis"
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:background="@drawable/shape_listview_type"
                android:orientation="horizontal"
                android:visibility="visible" >

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="match_parent" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="库存"
                    android:textSize="13sp"
                    android:gravity="center"
                    android:layout_height="match_parent" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="半成品"
                    android:textSize="13sp"
                    android:gravity="center"
                    android:layout_height="match_parent" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="待安装"
                    android:textSize="13sp"
                    android:gravity="center"
                    android:layout_height="match_parent" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="安装"
                    android:textSize="13sp"
                    android:gravity="center"
                    android:layout_height="match_parent" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="退货"
                    android:textSize="13sp"
                    android:gravity="center"
                    android:layout_height="match_parent" />


            </LinearLayout>
        </FrameLayout>









    </LinearLayout>


</LinearLayout>