<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="50dp"
    android:layout_gravity="bottom"
    android:background="@color/bottom_background"
    android:orientation="horizontal"
    >


<!--入库-->
    <LinearLayout
        android:id="@+id/ll_enter"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_explorer" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:textSize="12sp"
            android:text="入库"
            android:textColor="@drawable/bottom_text_color_change"
            />


    </LinearLayout>

    <!--出库-->

    <LinearLayout
        android:id="@+id/ll_outhouse"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/select_trip_wish" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="出库"
            android:textColor="@drawable/bottom_text_color_change"
            android:textSize="12sp"
            />


    </LinearLayout>


    <!--退货-->

    <LinearLayout
        android:id="@+id/ll_return"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/select_scan_code" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="退货"
            android:textColor="@drawable/bottom_text_color_change"
            android:textSize="12sp"
            />

    </LinearLayout>

    <!--统计-->

    <LinearLayout
        android:id="@+id/ll_statistics"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/select_my" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="统计"
            android:textColor="@drawable/bottom_text_color_change"
            android:textSize="12sp"
            />

    </LinearLayout>
</LinearLayout>

