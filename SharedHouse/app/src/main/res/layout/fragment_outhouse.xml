<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/bottom_background"
        android:paddingLeft="@dimen/ui_20_dp"
        android:paddingRight="@dimen/ui_25_dp">

        <TextView
            android:id="@+id/iv_photo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:background="@drawable/shape_name"
            android:gravity="center"
            android:text="测试"
            android:textColor="@color/white" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="出库"
            android:textColor="@color/white"
            android:textSize="20sp" />


        <TextView
            android:id="@+id/tv_examine"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="审核"
            android:textColor="@color/white"
            android:textSize="20sp" />


    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/ui_30_dp"
        android:layout_marginLeft="@dimen/ui_15_dp"
        android:layout_marginTop="@dimen/ui_30_dp">


        <TextView
            android:id="@+id/location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:drawableLeft="@mipmap/out_house_person"
            android:drawablePadding="@dimen/ui_15_dp"
            android:hint="点击该位置选择领用人"
            android:textSize="@dimen/ui_15_sp" />


        <Button
            android:id="@+id/btn_enter_type"
            android:layout_width="80dp"
            android:layout_height="26dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/ui_15_dp"
            android:background="@drawable/shape_enter_type_button"
            android:text="领用人;项目"
            android:visibility="gone"
            android:textColor="@color/white" />


    </RelativeLayout>

    <TextView
        android:id="@+id/tv_project"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="17dp"
        android:drawableLeft="@mipmap/out_house_project"
        android:drawablePadding="@dimen/ui_15_dp"
        android:hint="点击该位置选择项目"
        android:textSize="@dimen/ui_15_sp" />


    <Button
        android:id="@+id/btn_scan_code"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/ui_50_dp"
        android:background="@mipmap/scan_code_enter"
        android:gravity="center"
        android:orientation="vertical" />


    <View
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        android:layout_marginLeft="@dimen/ui_5_dp"
        android:layout_marginRight="@dimen/ui_5_dp"
        android:layout_marginTop="@dimen/ui_50_dp"
        android:background="#e1e1e1" />


    <Button
        android:id="@+id/manual_enter"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="@dimen/ui_40_dp"
        android:layout_marginRight="@dimen/ui_40_dp"
        android:layout_marginTop="60dp"
        android:background="@mipmap/manual_enter_house" />


</LinearLayout>