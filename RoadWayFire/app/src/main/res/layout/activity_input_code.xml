<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activities.InPutCodeActivity">

<include  layout="@layout/include_top"/>


    <!--第二步输入验证码-导航条-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x100"
        android:orientation="horizontal"
        android:background="@color/white"
        android:gravity="center"

        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1.输入手机号 > "
            android:textColor="@color/black_trans"
            android:textSize="16sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 2.输入验证码 "
            android:textColor="#f76968"
            android:textSize="16sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="> 3.设置密码"
            android:textColor="@color/black_trans"
            android:textSize="16sp"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x100"
        android:layout_marginTop="@dimen/x30"
        android:textColor="@color/black_trans"
        android:textSize="11sp"
        android:text="验证短信已经发送到12345678910"
        android:gravity="center"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x140"
        android:orientation="horizontal"
        android:layout_margin="@dimen/x30"
        android:background="#fff"
        >
        <EditText
            android:id="@+id/et_enter_phone_code_password"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:hint="请输入短信中的验证码"
            android:maxLines="1"
            android:paddingLeft="@dimen/x30"
            android:layout_marginRight="@dimen/x30"
            android:layout_marginLeft="@dimen/x30"
            android:textSize="@dimen/ui_13_sp"
            android:inputType="number"
            />
    </LinearLayout>




    <Button
        android:id="@+id/btn_submit_code"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x140"
        android:background="#f76968"
        android:textSize="16sp"
        android:text=" 提交验证码"
        android:textColor="#fff"
        android:layout_marginTop="@dimen/x20"
        android:layout_marginLeft="@dimen/x50"
        android:layout_marginRight="@dimen/x50"
        />



</LinearLayout>