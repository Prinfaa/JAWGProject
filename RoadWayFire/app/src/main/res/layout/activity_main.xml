<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.jinganweigu.RoadWayFire.Activities.MainActivity">



    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/home_line"/>


    <RadioGroup
        android:id="@+id/rg_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#fff"
        android:paddingTop="@dimen/x30"
        android:orientation="horizontal">

        <com.jinganweigu.RoadWayFire.ToolsUtils.widget.BadgeRadioButton
            android:id="@+id/rb_map"
            style="@style/MainButtonStyle"
            android:drawableTop="@drawable/select_bottom_button_map"
            android:text="地图" />

        <com.jinganweigu.RoadWayFire.ToolsUtils.widget.BadgeRadioButton
            android:id="@+id/rb_video"
            style="@style/MainButtonStyle"
            android:drawableTop="@drawable/select_bottom_button_video"
            android:text="视频" />

        <com.jinganweigu.RoadWayFire.ToolsUtils.widget.BadgeRadioButton
            android:id="@+id/rb_message"
            style="@style/MainButtonStyle"
            android:drawableTop="@drawable/select_bottom_button_message"
            android:text="消息" />

        <com.jinganweigu.RoadWayFire.ToolsUtils.widget.BadgeRadioButton
            android:id="@+id/rb_contacts"
            style="@style/MainButtonStyle"
            android:drawableTop="@drawable/select_bottom_button_contacts"
            android:text="通讯录" />

        <com.jinganweigu.RoadWayFire.ToolsUtils.widget.BadgeRadioButton
            android:id="@+id/rb_person"
            style="@style/MainButtonStyle"
            android:drawableTop="@drawable/select_bottom_button_person"
            android:text="个人" />
    </RadioGroup>



</LinearLayout>