<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="@dimen/x500"
        android:layout_height="@dimen/x650"
        android:background="@mipmap/cover_deal"
        android:orientation="vertical"
        >


        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/close"
            android:layout_gravity="right"
            android:layout_marginTop="@dimen/x30"
            android:layout_marginRight="@dimen/x30"
            />

        <TextView
            android:id="@+id/tv_device_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设备名称:"
            android:layout_marginLeft="@dimen/x40"
            android:layout_marginRight="@dimen/x10"
            android:maxLines="2"
            android:textColor="@color/font_color"
            android:textSize="@dimen/ui_12_sp"
            android:layout_marginTop="@dimen/x20"
            />

        <TextView
            android:id="@+id/tv_device_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设备状态:"
            android:layout_marginLeft="@dimen/x40"
            android:layout_marginRight="@dimen/x10"
            android:maxLines="1"
            android:textColor="@color/font_color"
            android:textSize="@dimen/ui_12_sp"
            android:layout_marginTop="@dimen/x20"
            />

        <TextView
            android:id="@+id/tv_device_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设备位置:"
            android:maxLines="2"
            android:layout_marginLeft="@dimen/x40"
            android:layout_marginRight="@dimen/x10"
            android:textColor="@color/font_color"
            android:textSize="@dimen/ui_12_sp"
            android:layout_marginTop="@dimen/x20"
            />



        <Button
            android:id="@+id/btn_check_deal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x80"
            android:layout_marginRight="@dimen/x50"
            android:layout_marginLeft="@dimen/x70"
            android:background="@drawable/shape_register_code_button"
            android:layout_marginTop="@dimen/x200"
            android:text="点击查看详情"
            android:textColor="#009688"
            android:textSize="13sp"
            />


    </LinearLayout>


</LinearLayout>