<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activities.ClassesManageActivity">


    <include layout="@layout/include_top"/>



    <Button
        android:id="@+id/btn_add"
        android:layout_width="@dimen/x200"
        android:layout_height="@dimen/x100"
        android:layout_marginLeft="@dimen/x30"
        android:background="@null"
        android:layout_marginTop="@dimen/x40"
        android:text="添加 +"
        />

    <EditText
        android:id="@+id/et_name"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x100"
        android:layout_marginLeft="@dimen/x30"
        android:layout_marginRight="@dimen/x30"
        android:hint="名称"
        android:layout_marginTop="@dimen/x40"
        android:paddingLeft="@dimen/x20"
        android:textSize="@dimen/ui_13_sp"
        android:maxLines="1"
        android:gravity="center_vertical"
        android:background="@drawable/shape_username_manager"/>

    <TextView
        android:id="@+id/et_start_time"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x100"
        android:layout_marginLeft="@dimen/x30"
        android:layout_marginRight="@dimen/x30"
        android:hint="开始时间"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/x20"
        android:textSize="@dimen/ui_13_sp"
        android:layout_marginTop="@dimen/x60"
        android:maxLines="1"
        android:background="@drawable/shape_username_manager"/>

    <TextView
        android:id="@+id/et_end_time"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x100"
        android:layout_marginLeft="@dimen/x30"
        android:layout_marginRight="@dimen/x30"
        android:hint="结束时间"
        android:paddingLeft="@dimen/x20"
        android:textSize="@dimen/ui_13_sp"
        android:layout_marginTop="@dimen/x60"
        android:maxLines="1"
        android:gravity="center_vertical"
        android:background="@drawable/shape_username_manager"/>



    <Button
        android:id="@+id/btn_sure"
        android:layout_width="@dimen/x230"
        android:layout_height="@dimen/x80"
        android:layout_gravity="right"
        android:layout_marginRight="@dimen/x30"
        android:layout_marginTop="@dimen/x50"
        android:background="@drawable/shape_register_code_button"
        android:textSize="12sp"
        android:text="确认"
        android:textColor="#009688"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="已有班次"
        android:textColor="@color/black_trans"
        android:layout_marginTop="@dimen/x50"
        android:layout_marginLeft="@dimen/x30"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/black_trans"
        android:layout_margin="@dimen/x30"
        />
    <ListView
        android:id="@+id/lv_classer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/x30"
        android:layout_marginRight="@dimen/x30"
        android:scrollbars="none"
        ></ListView>



</LinearLayout>