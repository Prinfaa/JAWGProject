<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f2f2f2"
    tools:context=".Activities.ForgetPasswordActivity">

        <include layout="@layout/include_top"/>

<!--第一步输入手机号-导航条-->
    <LinearLayout
        android:id="@+id/ll_input_phone_num"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x100"
        android:orientation="horizontal"
        android:background="@color/white"
        android:gravity="center"
        android:visibility="visible"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1.输入手机号"
            android:textColor="#F76968"
            android:textSize="16sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="> 2.输入手机号> 3.设置密码"
            android:textColor="@color/black_trans"
            android:textSize="16sp"
            />
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x140"
        android:orientation="horizontal"
        android:layout_margin="@dimen/x30"
        android:background="#fff"
        >
        <EditText
            android:id="@+id/et_enter_phone_code_password"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:hint="请输入您的手机号"
            android:maxLines="1"
            android:layout_marginRight="@dimen/x30"
            android:layout_marginLeft="@dimen/x30"
            android:textSize="@dimen/ui_13_sp"
            android:inputType="number"
            />
    </LinearLayout>



    <Button
        android:id="@+id/btn_get_code"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x140"
        android:background="#f76968"
        android:textSize="16sp"
        android:text=" 获取验证码"
        android:textColor="#fff"
        android:layout_marginTop="@dimen/x20"
        android:layout_marginLeft="@dimen/x50"
        android:layout_marginRight="@dimen/x50"
        />



</LinearLayout>