<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".Activities.PersonInformationActivity">

    <include layout="@layout/include_top"/>


    <LinearLayout
        android:id="@+id/ll_person_info"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x550"
        android:layout_margin="@dimen/x30"
        android:background="@drawable/shape_register_code_button"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x150"
            android:layout_marginLeft="@dimen/x40"
            android:layout_marginTop="@dimen/x40"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_photo"
                android:layout_width="@dimen/x140"
                android:layout_height="@dimen/x140"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/x70"
                android:background="@drawable/shape_contacts_first_name"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x50"
                android:layout_centerVertical="true"
                android:text="头像"
                android:textColor="@color/font_color"
                android:textSize="15sp" />

        </RelativeLayout>
        
        
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x100"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginRight="@dimen/x70"
            android:layout_marginLeft="@dimen/x90"
            android:layout_marginTop="@dimen/x30"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="姓名"
                android:textSize="13sp" />

            <EditText
                android:id="@+id/ed_name"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:maxLines="1"
                tools:text="李晓迪"
                android:textSize="15sp"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/x50"
                android:background="@null"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/change"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x100"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginRight="@dimen/x70"
            android:layout_marginLeft="@dimen/x90"
            android:layout_marginTop="@dimen/x30"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="电话"
                android:textSize="13sp" />

            <EditText
                android:id="@+id/ed_phone_num"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:maxLines="1"
                android:inputType="phone"
                android:layout_weight="1"
                tools:text="15555555555"
                android:textSize="15sp"
                android:layout_marginLeft="@dimen/x50"
                android:background="@null"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/change"
                />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:orientation="vertical"
        >

        <Button
            android:id="@+id/btn_change_username"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x100"
            android:background="#009688"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:text="切换账号"
            />
        <Button
            android:id="@+id/btn_quit"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x110"
            android:background="#E51c23"
            android:layout_marginTop="@dimen/x40"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:text="退出"
            />



    </LinearLayout>










</LinearLayout>