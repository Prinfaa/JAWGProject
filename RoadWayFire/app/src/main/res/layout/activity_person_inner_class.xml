<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".Activities.PersonInnerClassActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x150"
        android:background="#f2f2f2"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >
        <LinearLayout
            android:id="@+id/back_btn"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            >

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="12dp"
                android:layout_height="17dp"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/ui_10_dp"
                android:background="@mipmap/back"
                android:paddingLeft="18dp"
                android:paddingRight="18dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_class_and_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="早班    8:00--9:00"
            android:textSize="15sp"
            />

    </LinearLayout>



    <Button
        android:id="@+id/btn_add"
        android:layout_width="@dimen/x200"
        android:layout_height="@dimen/x100"
        android:layout_marginLeft="@dimen/x30"
        android:background="@null"
        android:layout_marginTop="@dimen/x40"
        android:text="添加 +"
        />



    <EditText
        android:id="@+id/et_phone_num"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x100"
        android:layout_marginLeft="@dimen/x30"
        android:layout_marginRight="@dimen/x30"
        android:hint="手机号"
        android:layout_marginTop="@dimen/x40"
        android:paddingLeft="@dimen/x20"
        android:textSize="@dimen/ui_13_sp"
        android:maxLines="1"
        android:visibility="gone"
        android:gravity="center_vertical"
        android:background="@drawable/shape_username_manager"/>



    <Button
        android:id="@+id/btn_sure"
        android:layout_width="@dimen/x230"
        android:layout_height="@dimen/x80"
        android:layout_gravity="right"
        android:layout_marginRight="@dimen/x30"
        android:layout_marginTop="@dimen/x50"
        android:background="@drawable/shape_register_code_button"
        android:textSize="12sp"
        android:text="确认"
        android:visibility="gone"
        android:textColor="#009688"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x80"
        android:layout_marginLeft="@dimen/x30"
        android:textSize="12sp"
        android:text="人员"
        android:textColor="@color/black"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/line_color"
        android:layout_margin="@dimen/x30"/>

    <GridView
        android:id="@+id/gv_name"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:numColumns="3"
        ></GridView>



</LinearLayout>